{% extends 'backend/baseBack.html.twig' %}
{% block content %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h2>Update Warehouse</h2>
                </div>
                <div class="card-body">
                    <h4 class="text-center mb-4">Warehouse ID: {{ warehouse.idWarehouse }}</h4>
                    {% if error == true %}
                        <div class="alert alert-danger mt-4 text-center" role="alert">
                            <h4>Warehouse already exists</h4>
                        </div>
                    {% endif %}
                    {{ form_start(warehouseupdateform) }}
                        <div class="form-group mb-3">
                            {{ form_label(warehouseupdateform.typeWarehouse, 'Type', {'label_attr': {'class': 'font-weight-bold'}}) }}
                            {{ form_errors(warehouseupdateform.typeWarehouse) }}
                            {{ form_widget(warehouseupdateform.typeWarehouse, {'attr': {'class': 'form-control', 'placeholder': warehouse.typeWarehouse} }) }}
                        </div>
                        <div class="form-group mb-3">
                            {{ form_label(warehouseupdateform.city, 'City', {'label_attr': {'class': 'font-weight-bold'}}) }}
                            {{ form_errors(warehouseupdateform.city) }}
                            {{ form_widget(warehouseupdateform.city, {'attr': {'class': 'form-control', 'placeholder': warehouse.city} }) }}
                        </div>
                        <div class="form-group mb-3">
                            {{ form_label(warehouseupdateform.street, 'Street', {'label_attr': {'class': 'font-weight-bold'}}) }}
                            {{ form_errors(warehouseupdateform.street) }}
                            {{ form_widget(warehouseupdateform.street, {'attr': {'class': 'form-control', 'placeholder': warehouse.street} }) }}
                        </div>
                        <div class="form-group mb-3">
                            {{ form_label(warehouseupdateform.postalCode, 'Postal Code', {'label_attr': {'class': 'font-weight-bold'}}) }}
                            {{ form_errors(warehouseupdateform.postalCode) }}
                            {{ form_widget(warehouseupdateform.postalCode, {'attr': {'class': 'form-control', 'placeholder': warehouse.postalCode} }) }}
                        </div>
                        <div class="form-group mb-3">
                            {{ form_label(warehouseupdateform.capacityWarehouse, 'Capacity', {'label_attr': {'class': 'font-weight-bold'}}) }}
                            {{ form_errors(warehouseupdateform.capacityWarehouse) }}
                            {{ form_widget(warehouseupdateform.capacityWarehouse, {'attr': {'class': 'form-control', 'placeholder': warehouse.capacityWarehouse} }) }}
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-success btn-lg">Update Warehouse</button>
                        </div>
                    {{ form_end(warehouseupdateform) }}
                </div>
            </div>  
        </div>
    </div>
</div>
{% endblock %}