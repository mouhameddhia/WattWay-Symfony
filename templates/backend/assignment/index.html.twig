{% extends 'backend/baseBack.html.twig' %}

{% block title %}Assignments{% endblock %}

{% block css %}
    {{ parent() }}
    <link href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap4.min.css" rel="stylesheet">
    <style>
        /* Custom badge colors for status */
        .btn-group-sm > .btn,
            .btn-group-sm > form {
            margin-right: .25rem;
            }

        .badge-pending {
            background-color: #f6c23e; /* Yellow */
            color: white;
        }
        
        .badge-in-progress {
            background-color: #4e73df; /* Blue */
            color: white;
        }
        
        .badge-completed {
            background-color: #1cc88a; /* Green */
            color: white;
        }

        /* Compact table styles */
        .table {
            font-size: 0.85rem;
        }
        
        .table td, .table th {
            padding: 0.5rem;
            vertical-align: middle;
        }

        /* Smaller buttons */
        .btn-sm {
            padding: 0.2rem 0.5rem;
            font-size: 0.75rem;
            line-height: 1.4;
        }

        /* Assignment icon */
        .assignment-icon {
            width: 28px;
            height: 28px;
            padding: 6px;
            cursor: pointer;
            color: #4e73df;
            transition: all 0.3s ease;
            padding: 8px;
            border-radius: 50%;
            background: #f8f9fc;
            margin-right: 10px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 35px;
            height: 35px;
            border: 1px solid #e3e6f0;
        }

        .assignment-icon:hover {
            color: white;
            background: #4e73df;
            transform: scale(1.1);
            box-shadow: 0 2px 8px rgba(78, 115, 223, 0.3);
            border-color: #4e73df;
        }

        .assignment-icon svg {
            width: 14px;
            height: 14px;
        }

        /* Status badges */
        .badge {
            font-size: 0.75rem;
            padding: 0.25em 0.6em;
        }

        /* Action buttons group */
        .btn-group-sm > .btn {
            padding: 0.2rem 0.5rem;
            font-size: 0.75rem;
            margin-right: 2px;
        }

        .btn-group-sm > .btn:last-child {
            margin-right: 0;
        }

        .action-column {
            white-space: nowrap;
            width: 120px;
        }

        /* Table header - blue style */
        #dataTable thead tr {
            background: linear-gradient(180deg, #4e73df 0%, #224abe 100%);
            color: white;
        }

        #dataTable thead th {
            font-size: 0.8rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            border: none;
            padding: 0.75rem;
            vertical-align: middle;
        }

        /* Hover effects */
        .table-hover tbody tr:hover {
            background-color: rgba(78, 115, 223, 0.05);
        }
    </style>
{% endblock %}

{% block content %}
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Assignments</h1>
            <a href="{{ path('app_assignment_new') }}" class="d-none d-sm-inline-block btn btn-primary shadow-sm">
                <i class="fas fa-plus fa-sm text-white-50 mr-2"></i> Create New Assignment
            </a>
        </div>
        <div class="row mb-3">
        <div class="col-12 col-md-8 offset-md-2">
            <form method="get" class="form-inline justify-content-center">
            <input
                type="text"
                name="q"
                class="form-control form-control-sm mr-2"
                placeholder="Search assignments…"
                value="{{ currentSearch }}"
            />

            <select name="sort" class="form-control form-control-sm mr-2">
                <option value="">Sort by…</option>
                <option value="date"   {{ currentSort=='date'   ? 'selected' }}>Date</option>
                <option value="status" {{ currentSort=='status' ? 'selected' }}>Status</option>
                <option value="car"    {{ currentSort=='car'    ? 'selected' }}>Car</option>
            </select>

            <select name="dir" class="form-control form-control-sm mr-2">
                <option value="ASC"  {{ currentDir=='ASC'  ? 'selected' }}>↑ ASC</option>
                <option value="DESC" {{ currentDir=='DESC' ? 'selected' }}>↓ DESC</option>
            </select>

            <button type="submit" class="btn btn-primary btn-sm">Apply</button>
            <a href="{{ path('app_assignment_index') }}"
                class="btn btn-secondary btn-sm ml-2">Reset</a>
            </form>
        </div>
        </div>


        <!-- Card -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Assignment List</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Description</th>
                                <th>Status</th>
                                <th>Date</th>
                                <th>Car</th>
                                <th>Mechanics</th>
                                <th class="action-column">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for assignment in assignments %}
                                <tr>
                                    <td>{{ assignment.descriptionAssignment }}</td>
                                    <td>
                                        <span class="badge {% if assignment.statusAssignment == 'Completed' %}badge-completed{% elseif assignment.statusAssignment == 'In Progress' %}badge-in-progress{% else %}badge-pending{% endif %}">
                                            {{ assignment.statusAssignment }}
                                        </span>
                                    </td>
                                    <td>{{ assignment.dateAssignment ? assignment.dateAssignment|date('Y-m-d H:i:s') : '' }}</td>
                                    <td>{{ assignment.car.brandCar }} {{ assignment.car.modelCar }}</td>
                                    <td>
                                        {% for assignmentMechanic in assignment.assignmentMechanics %}
                                            <span class="badge badge-info" title="{{ assignmentMechanic.idMechanic.specialityMechanic }}">
                                                {{ assignmentMechanic.idMechanic.nameMechanic }}
                                            </span>
                                        {% else %}
                                            <span class="badge badge-secondary">No mechanics</span>
                                        {% endfor %}
                                    </td>
                                    <td class="action-column">
                                        <div class="btn-group btn-group-sm">
                                            <a href="{{ path('app_assignment_show', {'idAssignment': assignment.idAssignment}) }}" class="btn btn-info btn-sm">
                                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512" width="14" height="14" fill="currentColor">
                                                    <path d="M288 32c-80.8 0-145.5 36.8-192.6 80.6C48.6 156 17.3 208 2.5 243.7c-3.3 7.9-3.3 16.7 0 24.6C17.3 304 48.6 356 95.4 399.4C142.5 443.2 207.2 480 288 480s145.5-36.8 192.6-80.6c46.8-43.5 78.1-95.4 93-131.1c3.3-7.9 3.3-16.7 0-24.6c-14.9-35.7-46.2-87.7-93-131.1C433.5 68.8 368.8 32 288 32zM144 256a144 144 0 1 1 288 0 144 144 0 1 1 -288 0zm144-64c0 35.3-28.7 64-64 64c-7.1 0-13.9-1.2-20.3-3.3c-5.5-1.8-11.9 1.6-11.7 7.4c.3 6.9 1.3 13.8 3.2 20.7c13.7 51.2 66.4 81.6 117.6 67.9s81.6-66.4 67.9-117.6c-11.1-41.5-47.8-69.4-88.6-71.1c-5.8-.2-9.2 6.1-7.4 11.7c2.1 6.4 3.3 13.2 3.3 20.3z"/>
                                                </svg>
                                            </a>
                                            <a href="{{ path('app_assignment_edit', {'idAssignment': assignment.idAssignment}) }}" class="btn btn-warning btn-sm">
                                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" width="14" height="14" fill="currentColor">
                                                    <path d="M471.6 21.7c-21.9-21.9-57.3-21.9-79.2 0L362.3 51.7l97.9 97.9 30.1-30.1c21.9-21.9 21.9-57.3 0-79.2L471.6 21.7zm-299.2 220c-6.1 6.1-10.8 13.6-13.5 21.9l-29.6 88.8c-2.9 8.6-.6 18.1 5.8 24.6s15.9 8.7 24.6 5.8l88.8-29.6c8.2-2.7 15.7-7.4 21.9-13.5L437.7 172.3 339.7 74.3 172.4 241.7zM96 64C43 64 0 107 0 160L0 416c0 53 43 96 96 96l256 0c53 0 96-43 96-96l0-96c0-17.7-14.3-32-32-32s-32 14.3-32 32l0 96c0 17.7-14.3 32-32 32L96 448c-17.7 0-32-14.3-32-32l0-256c0-17.7 14.3-32 32-32l96 0c17.7 0 32-14.3 32-32s-14.3-32-32-32L96 64z"/>
                                                </svg>
                                            </a>
                                            <form method="post" action="{{ path('app_assignment_delete', {'idAssignment': assignment.idAssignment}) }}" onsubmit="return confirm('Are you sure you want to delete this assignment?');" style="display: inline;">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ assignment.idAssignment) }}">
                                                <button type="submit" class="btn btn-danger btn-sm">
                                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" width="14" height="14" fill="currentColor">
                                                        <path d="M135.2 17.7L128 32H32C14.3 32 0 46.3 0 64S14.3 96 32 96H416c17.7 0 32-14.3 32-32s-14.3-32-32-32H320l-7.2-14.3C307.4 6.8 296.3 0 284.2 0H163.8c-12.1 0-23.2 6.8-28.6 17.7zM416 128H32L53.2 467c1.6 25.3 22.6 45 47.9 45H346.9c25.3 0 46.3-19.7 47.9-45L416 128z"/>
                                                    </svg>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="6" class="text-center text-muted py-3">No assignments found</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#dataTable').DataTable({
                "pageLength": 10,
                "language": {
                    "search": "Search assignments:",
                    "emptyTable": "No assignments found"
                },
                "drawCallback": function(settings) {
                    // Ensure the table is visible after initialization
                    $('.table-responsive').show();
                }
            });
        });
    </script>
{% endblock %}
