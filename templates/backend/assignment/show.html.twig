{% extends 'backend/baseBack.html.twig' %}

{% block title %}Assignment Details{% endblock %}

{% block content %}
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Assignment Details</h1>
            <div class="btn-group" role="group">
                <a href="{{ path('app_assignment_edit', {'idAssignment': assignment.idAssignment}) }}" class="btn btn-primary btn-sm">
                    <i class="fas fa-edit fa-sm text-white-50"></i> Edit
                </a>
                <a href="{{ path('app_assignment_index') }}" class="btn btn-secondary btn-sm">
                    <i class="fas fa-arrow-left fa-sm text-white-50"></i> Back to List
                </a>
            </div>
        </div>

        <!-- Content Row -->
        <div class="row">
            <!-- Assignment Details Card -->
            <div class="col-xl-8 col-lg-7">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Assignment Information</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <tr>
                                    <th>ID</th>
                                    <td>{{ assignment.idAssignment }}</td>
                                </tr>
                                <tr>
                                    <th>Description</th>
                                    <td>{{ assignment.descriptionAssignment }}</td>
                                </tr>
                                <tr>
                                    <th>Status</th>
                                    <td>
                                        <span class="badge badge-{{ assignment.statusAssignment == 'Completed' ? 'success' : (assignment.statusAssignment == 'In Progress' ? 'warning' : 'secondary') }}">
                                            {{ assignment.statusAssignment }}
                                        </span>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Date</th>
                                    <td>{{ assignment.dateAssignment ? assignment.dateAssignment|date('Y-m-d H:i:s') : '' }}</td>
                                </tr>
                                <tr>
                                    <th>Car</th>
                                    <td>{{ assignment.car.brandCar }} {{ assignment.car.modelCar }}</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Mechanics Card -->
            <div class="col-xl-4 col-lg-5">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Assigned Mechanics</h6>
                    </div>
                    <div class="card-body">
                        <div class="list-group">
                            {% for assignmentMechanic in assignment.assignmentMechanics %}
                                <div class="list-group-item">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">{{ assignmentMechanic.idMechanic.nameMechanic }}</h6>
                                        <small class="text-muted">{{ assignmentMechanic.idMechanic.specialityMechanic }}</small>
                                    </div>
                                    <p class="mb-1">{{ assignmentMechanic.idMechanic.emailMechanic }}</p>
                                </div>
                            {% else %}
                                <div class="text-center text-muted">No mechanics assigned</div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Delete Form -->
        <div class="row">
            <div class="col-12">
                <form method="post" action="{{ path('app_assignment_delete', {'idAssignment': assignment.idAssignment}) }}" onsubmit="return confirm('Are you sure you want to delete this assignment?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ assignment.idAssignment) }}">
                    <button class="btn btn-danger">
                        <i class="fas fa-trash"></i> Delete Assignment
                    </button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
