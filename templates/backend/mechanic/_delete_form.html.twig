<form method="post" action="{{ path('app_mechanic_delete', {'idMechanic': mechanic.idMechanic}) }}" class="d-inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ mechanic.idMechanic) }}">
    <button type="submit" class="btn btn-danger btn-sm" onclick="if (!confirm('Are you sure you want to delete this mechanic?')) { event.preventDefault(); return false; }">
        <i class="fas fa-trash"></i>
    </button>
</form>
