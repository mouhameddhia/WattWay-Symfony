{% extends 'backend/baseBack.html.twig' %}

{% block title %}Edit Mechanic{% endblock %}

{% block css %}
    {{ parent() }}
    <style>
        .mechanic-image {
            max-width: 200px;
            max-height: 200px;
            border-radius: 4px;
            border: 1px solid #ddd;
            padding: 5px;
        }
        .file-upload-wrapper {
            margin-bottom: 1rem;
        }
        .current-image-label {
            font-weight: 600;
            color: #5a5c69;
            display: block;
            margin-bottom: 0.5rem;
        }
        .image-upload-frame {
            border: 2px dashed #e3e6f0;
            border-radius: 0.35rem;
            padding: 1.5rem;
            background-color: #f8f9fc;
            transition: all 0.3s;
            margin-bottom: 1.5rem;
        }
        .image-upload-frame:hover {
            border-color: #4e73df;
            background-color: #f0f5ff;
        }
        .mechanic-image {
            max-width: 200px;
            max-height: 200px;
            border-radius: 0.25rem;
            border: 1px solid #ddd;
            padding: 3px;
            background: white;
            box-shadow: 0 0.15rem 0.5rem rgba(0,0,0,0.1);
        }
        .upload-btn {
            display: inline-block;
            padding: 0.5rem 1rem;
            background: #4e73df;
            color: white;
            border-radius: 0.25rem;
            cursor: pointer;
            transition: all 0.3s;
        }
        .upload-btn:hover {
            background: #2e59d9;
            transform: translateY(-1px);
        }
        .upload-btn i {
            margin-right: 0.5rem;
        }
        .image-preview-container {
            text-align: center;
            margin: 1rem 0;
        }
        .current-image-label {
            font-weight: 600;
            color: #5a5c69;
            margin-bottom: 0.5rem;
            display: block;
        }
        .is-invalid {
            border-color: #e74a3b !important;
        }
        .invalid-feedback {
            color: #e74a3b;
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }
    </style>
{% endblock %}

{% block content %}
<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Edit Mechanic</h1>
        <a href="{{ path('app_mechanic_index') }}" class="d-none d-sm-inline-block btn btn-sm btn-secondary shadow-sm">
            <i class="fas fa-arrow-left fa-sm text-white-50 mr-2"></i> Back to List
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Mechanic Information</h6>
        </div>
        <div class="card-body">
            {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate', 'enctype': 'multipart/form-data'}}) }}
            
            <div class="form-group row">
                <div class="col-md-6 mb-3">
                    {{ form_label(form.nameMechanic, 'Full Name') }}
                    {{ form_widget(form.nameMechanic, {
                        'attr': {
                            'class': 'form-control' ~ (form.nameMechanic.vars.errors|length ? ' is-invalid' : ''),
                            'placeholder': 'Enter mechanic full name'
                        }
                    }) }}
                    {{ form_errors(form.nameMechanic) }}
                </div>
                
                <div class="col-md-6 mb-3">
                    {{ form_label(form.specialityMechanic, 'Speciality') }}
                    {{ form_widget(form.specialityMechanic, {
                        'attr': {
                            'class': 'form-control' ~ (form.specialityMechanic.vars.errors|length ? ' is-invalid' : ''),
                            'placeholder': 'Select speciality'
                        }
                    }) }}
                    {{ form_errors(form.specialityMechanic) }}
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-6 mb-3">
                    {{ form_label(form.emailMechanic, 'Email') }}
                    {{ form_widget(form.emailMechanic, {
                        'attr': {
                            'class': 'form-control' ~ (form.emailMechanic.vars.errors|length ? ' is-invalid' : ''),
                            'placeholder': 'Enter email address'
                        }
                    }) }}
                    {{ form_errors(form.emailMechanic) }}
                </div>
                
                <div class="col-md-6 mb-3">
                    {{ form_label(form.carsRepaired, 'Cars Repaired') }}
                    {{ form_widget(form.carsRepaired, {
                        'attr': {
                            'class': 'form-control' ~ (form.carsRepaired.vars.errors|length ? ' is-invalid' : ''),
                            'placeholder': 'Enter number of cars repaired',
                            'min': 0
                        }
                    }) }}
                    {{ form_errors(form.carsRepaired) }}
                </div>
            </div>
            
            <!-- Custom Image Upload Field (NOT part of the form) -->
            <div class="image-upload-frame">
                
                {% if mechanic.imgMechanic %}
                    <div class="image-preview-container">
                        <div class="mb-2 text-primary">
                            <i class="fas fa-check-circle"></i> Current Image
                        </div>
                        <img src="{{ asset('uploads/mechanics/' ~ mechanic.imgMechanic) }}" 
                             class="mechanic-image"
                             alt="Current mechanic image">
                    </div>
                {% endif %}
                
                <div class="text-center">
                    <div class="upload-btn" onclick="document.getElementById('mechanic_image_upload').click()">
                        <i class="fas fa-camera"></i>
                        {{ mechanic.imgMechanic ? 'Change Image' : 'Upload Image' }}
                    </div>
                    <input 
                        type="file" 
                        id="mechanic_image_upload" 
                        name="mechanic_image"
                        accept="image/*"
                        style="display: none;"
                        onchange="previewImage(this)"
                    >
                    <div id="newImagePreview" class="image-preview-container" style="display: none;">
                        <div class="mb-2 text-success">
                            <i class="fas fa-image"></i> New Image Preview
                        </div>
                        <img id="imagePreview" src="#" alt="Preview" class="mechanic-image">
                    </div>
                    <small class="text-muted d-block mt-2">Recommended size: 300Ã—300 pixels (JPG/PNG)</small>
                </div>
            </div>
            
            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary mr-2">
                    <i class="fas fa-save mr-2"></i> Update Mechanic
                </button>
                <a href="{{ path('app_mechanic_index') }}" class="btn btn-secondary">
                    <i class="fas fa-times mr-2"></i> Cancel
                </a>
            </div>
            
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script>
        // Image preview functionality
        function previewImage(input) {
            const preview = document.getElementById('imagePreview');
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    preview.src = e.target.result;
                    preview.style.display = 'block';
                };
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
{% endblock %}