{% extends 'backend/baseBack.html.twig' %}

{% block title %}New Mechanic{% endblock %}

{% block css %}
    {{ parent() }}
    <style>
        .card {
            border: none;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
        }
        .form-control {
            border-radius: 0.35rem;
            padding: 0.75rem 1rem;
        }
        .btn-primary {
            background-color: #4e73df;
            border-color: #4e73df;
            padding: 0.5rem 1.5rem;
            font-weight: 600;
        }
        .file-upload-btn {
            border: 2px dashed #ddd;
            border-radius: 8px;
            padding: 20px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s;
        }
        .file-upload-btn:hover {
            border-color: #4e73df;
            background-color: #f8f9fc;
        }
        .preview-image {
            max-width: 200px;
            max-height: 200px;
            border-radius: 4px;
            margin-top: 10px;
            display: none;
        }
        .file-upload-info {
            margin-top: 5px;
            font-size: 0.8rem;
            color: #6c757d;
        }
    </style>
{% endblock %}

{% block content %}
<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Add New Mechanic</h1>
        <a href="{{ path('app_mechanic_index') }}" class="d-none d-sm-inline-block btn btn-sm btn-secondary shadow-sm">
            <i class="fas fa-arrow-left fa-sm text-white-50 mr-2"></i> Back to List
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Mechanic Information</h6>
        </div>
        <div class="card-body">
            {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
            
                <!-- Name and Speciality -->
                <div class="form-group row">
                    <div class="col-md-6 mb-3">
                        {{ form_label(form.nameMechanic, 'Full Name', {'label_attr': {'class': 'small font-weight-bold text-primary'}}) }}
                        {{ form_widget(form.nameMechanic, {
                            'attr': {
                                'class': 'form-control',
                                'placeholder': 'Enter mechanic full name'
                            }
                        }) }}
                        <div class="invalid-feedback">
                            {{ form_errors(form.nameMechanic) }}
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        {{ form_label(form.specialityMechanic, 'Speciality', {'label_attr': {'class': 'small font-weight-bold text-primary'}}) }}
                        {{ form_widget(form.specialityMechanic, {
                            'attr': {
                                'class': 'form-control',
                                'placeholder': 'Select speciality'
                            }
                        }) }}
                        <div class="invalid-feedback">
                            {{ form_errors(form.specialityMechanic) }}
                        </div>
                    </div>
                </div>

                <!-- Email and Cars Repaired -->
                <div class="form-group row">
                    <div class="col-md-6 mb-3">
                        {{ form_label(form.emailMechanic, 'Email', {'label_attr': {'class': 'small font-weight-bold text-primary'}}) }}
                        {{ form_widget(form.emailMechanic, {
                            'attr': {
                                'class': 'form-control',
                                'placeholder': 'Enter email address'
                            }
                        }) }}
                        <div class="invalid-feedback">
                            {{ form_errors(form.emailMechanic) }}
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        {{ form_label(form.carsRepaired, 'Cars Repaired', {'label_attr': {'class': 'small font-weight-bold text-primary'}}) }}
                        {{ form_widget(form.carsRepaired, {
                            'attr': {
                                'class': 'form-control',
                                'placeholder': 'Enter number of cars repaired',
                                'min': 0
                            }
                        }) }}
                        <div class="invalid-feedback">
                            {{ form_errors(form.carsRepaired) }}
                        </div>
                    </div>
                </div>

                <!-- Custom Image Upload Section -->
                <div class="form-group">
                    <label class="small font-weight-bold text-primary">Profile Image</label>
                    <div class="file-upload-btn" onclick="document.getElementById('mechanic_image_upload').click()">
                        <i class="fas fa-camera mr-2"></i> Click to upload an image
                        <input 
                            type="file" 
                            id="mechanic_image_upload" 
                            name="mechanic_image"
                            accept="image/*"
                            style="display: none;"
                            onchange="previewImage(this)"
                        >
                    </div>
                    <div class="file-upload-info">
                        (Optional) Recommended size: 300x300px, JPG/PNG format
                    </div>
                    <img id="imagePreview" src="#" alt="Preview" class="preview-image">
                </div>

                <!-- Submit Buttons -->
                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary mr-2">
                        <i class="fas fa-save mr-2"></i> Save Mechanic
                    </button>
                    <a href="{{ path('app_mechanic_index') }}" class="btn btn-secondary">
                        <i class="fas fa-times mr-2"></i> Cancel
                    </a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script>
        // Image Preview Functionality
        function previewImage(input) {
            const preview = document.getElementById('imagePreview');
            const fileInfo = document.getElementById('fileInfo');
            
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                
                reader.onload = function(e) {
                    preview.src = e.target.result;
                    preview.style.display = 'block';
                };
                
                reader.readAsDataURL(input.files[0]);
                
                // Show file info
                if (fileInfo) {
                    fileInfo.textContent = input.files[0].name + ' (' + 
                        Math.round(input.files[0].size / 1024) + ' KB)';
                    fileInfo.style.display = 'block';
                }
            }
        }

        // Form validation
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                const forms = document.getElementsByClassName('needs-validation');
                Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
{% endblock %}