{% extends 'backend/baseBack.html.twig' %}

{% block title %}Edit Response{% endblock %}

{% block content %}
    <div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h1 class="mb-0 fw-bold">Edit Response</h1>
        </div>
        <div class="card-body p-4">
            {{ form_errors(form) }}
            {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                <div class="mb-4">
                    {{ form_label(form.dateResponse, 'Response Date', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.dateResponse, {'attr': {'class': 'form-control rounded-3 py-2'}}) }}
                    {{ form_errors(form.dateResponse) }}
                </div>

                <div class="mb-4">
                    {{ form_label(form.message, 'Message', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.message, {'attr': {'class': 'form-control rounded-3 py-2', 'rows': '4'}}) }}
                    {{ form_errors(form.message) }}
                </div>

                <div class="mb-4">
                    {{ form_label(form.typeResponse, 'Response Type', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.typeResponse, {'attr': {'class': 'form-select rounded-3 py-2'}}) }}
                    {{ form_errors(form.typeResponse) }}
                </div>

                <div class="d-flex gap-3 mt-4">
                    <button type="submit" class="btn btn-primary px-4 py-2 fw-bold rounded-pill">
                        <i class="bi bi-save me-2"></i>Update
                    </button>
                    <a href="{{ path('app_response_index') }}" class="btn btn-outline-secondary px-4 py-2 fw-bold rounded-pill">
                        <i class="bi bi-arrow-left me-2"></i>Back to list
                    </a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>

    {{ include('backend/response/_delete_form.html.twig') }}
{% endblock %}
