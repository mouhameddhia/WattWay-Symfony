{% extends 'backend/baseBack.html.twig' %}

{% block title %}Responses{% endblock %}

{% block css %}
    {{ parent() }}
    <link href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap4.min.css" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        /* Inherit all feedback list styles */
        #responsesTable {
            width: 90%;
            margin: 0 auto;
            font-size: 14px;
            border: 1px solid #ddd;
            border-collapse: collapse;
        }

        #responsesTable th, #responsesTable td {
            padding: 8px 12px;
            text-align: center;
            vertical-align: middle;
        }

        /* Text truncation for message */
        .text-truncate {
            max-width: 200px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        /* Badge styling */
        .badge-primary { background-color: #4e73df; }
        .badge-info { background-color: #36b9cc; }
        .badge-secondary { background-color: #1c4f9c; }

        .badge {
            font-size: 0.75rem;
            padding: 0.25em 0.6em;
            color: white;
        }

        /* Hover effect for rows */
        #responsesTable tbody tr:hover {
            background-color: #f8f9fc;
        }

        /* Card styling */
        .card-shadow {
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
        }

        /* Button group styling */
        .btn-group-sm .btn {
            padding: 0.2rem 0.5rem;
            font-size: 0.75rem;
            line-height: 1.4;
        }

        /* Table header - blue style */
        #responsesTable thead tr {
            background-color: #4A79D9;
            color: white;
            font-weight: bold;
        }

        #responsesTable thead th {
            font-size: 0.8rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            border: none;
            padding: 0.75rem;
            vertical-align: middle;
        }

        /* Pagination Styles */
        .pagination {
            margin-top: 20px;
            justify-content: center;
        }

        .pagination .page-item .page-link {
            color: #4e73df;
            border: 1px solid #e3e6f0;
            padding: 0.5rem 0.75rem;
            margin: 0 2px;
            border-radius: 4px;
        }

        .pagination .page-item.active .page-link {
            background-color: #4e73df;
            border-color: #4e73df;
            color: white;
        }

        .pagination .page-item .page-link:hover {
            background-color: #eaecf4;
            border-color: #e3e6f0;
        }

        .pagination .page-item.disabled .page-link {
            color: #858796;
            pointer-events: none;
            background-color: #fff;
            border-color: #e3e6f0;
        }
    </style>
{% endblock %}

{% block content %}
    <div class="container-fluid">
        <h1 class="h3 mb-4 text-gray-800">Responses Management</h1>

        <div class="card shadow mb-4 card-shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">All Responses</h6>
                <a href="{{ path('app_response_new') }}" class="btn btn-primary btn-sm float-right">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" width="14" height="14" fill="currentColor" class="mr-1">
                        <path d="M256 80c0-17.7-14.3-32-32-32s-32 14.3-32 32V224H48c-17.7 0-32 14.3-32 32s14.3 32 32 32H192V432c0 17.7 14.3 32 32 32s32-14.3 32-32V288H400c17.7 0 32-14.3 32-32s-14.3-32-32-32H256V80z"/>
                    </svg>
                    New Response
                </a>
            </div>
            <div class="card-body">
                <!-- Search and Filter Section -->
                <div class="mb-4 flex flex-wrap gap-4 items-center">
                    <div class="flex-1">
                        <input type="text" 
                               id="searchInput" 
                               class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500" 
                               placeholder="Search responses...">
                    </div>
                    <div class="w-48">
                        <select id="typeFilter" 
                                class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                            <option value="">All Types</option>
                            <option value="ACKNOWLEDGMENT">Acknowledgment</option>
                            <option value="RESOLUTION">Resolution</option>
                            <option value="OTHER">Other</option>
                        </select>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-hover table-striped shadow" id="responsesTable">
                        <thead class="thead">
                            <tr>
                                <th>ID</th>
                                <th>Message</th>
                                <th>Date</th>
                                <th>Type</th>
                                <th>User</th>
                                <th>Submission</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody id="responsesTableBody">
                            {% include 'backend/response/_responses_table.html.twig' with {'responses': knp_pagination} %}
                        </tbody>
                    </table>
                </div>

                {# Pagination #}
                <div class="d-flex justify-content-center">
                    {{ knp_pagination_render(knp_pagination, '@KnpPaginator/Pagination/twitter_bootstrap_v4_pagination.html.twig') }}
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Overlay -->
    <div id="overlay"></div>
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function() {
            let searchTimeout;
            const searchInput = $('#searchInput');
            const typeFilter = $('#typeFilter');
            const responsesTableBody = $('#responsesTableBody');

            function updateResponses() {
                const search = searchInput.val();
                const type = typeFilter.val();

                $.get('{{ path('app_response_filter') }}', { search, type }, function(data) {
                    responsesTableBody.html(data);
                }).fail(function(jqXHR, textStatus, errorThrown) {
                    console.error('Error fetching responses:', textStatus, errorThrown);
                });
            }

            // Debounce search input
            searchInput.on('input', function() {
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(updateResponses, 300);
            });

            // Filter change
            typeFilter.on('change', updateResponses);

            // Initial DataTable setup
            $('#responsesTable').DataTable({
                "paging": false,
                "ordering": true,
                "info": false,
                "searching": false, // Disable DataTables search since we're using custom search
                "columnDefs": [
                    { "width": "5%", "targets": 0 },
                    { "width": "25%", "targets": 1 },
                    { "width": "15%", "targets": 2 },
                    { "width": "10%", "targets": 3 },
                    { "width": "15%", "targets": 4 },
                    { "width": "15%", "targets": 5 },
                    { "width": "15%", "targets": 6, "orderable": false }
                ]
            });
        });
    </script>
{% endblock %}