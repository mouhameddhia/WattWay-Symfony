{# templates/backend/feedback/listFeedback.html.twig #}
{% extends 'backend/baseBack.html.twig' %}

{% block title %}Feedback List{% endblock %}

{% block css %}
    {{ parent() }}
    <link href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap4.min.css" rel="stylesheet">
    <style>
        /* Floating Container (Initially Hidden) */
        #floatingContainer {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%) scale(0.9);
            background: rgba(255, 255, 255, 0.95);
            width: 400px;
            padding: 20px;
            box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.3);
            border-radius: 8px;
            opacity: 0;
            visibility: hidden;
            transition: opacity 0.3s ease, transform 0.3s ease;
            max-width: 600px; 
            max-height: 80%;   
            overflow-y: auto;  
            z-index: 1050;
        }

        /* Show Modal */
        #floatingContainer.active {
            opacity: 1;
            visibility: visible;
            transform: translate(-50%, -50%) scale(1);
        }

        /* Close Button */
        .close-btn {
            position: absolute;
            top: 10px;
            right: 15px;
            font-size: 20px;
            cursor: pointer;
        }

        /* Background Overlay */
        #overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            opacity: 0;
            visibility: hidden;
            transition: opacity 0.3s ease;
            z-index: 1040;
        }

        /* Show Overlay */
        #overlay.active {
            opacity: 1;
            visibility: visible;
        }

        /* Prevent Scrolling When Modal is Open */
        body.modal-open {
            overflow: hidden;
        }

        /* Table Styles */
        #feedbacksTable {
            width: 80%;
            margin: 0 auto;
            font-size: 14px;
            border: 1px solid #ddd;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        #feedbacksTable th, #feedbacksTable td {
            padding: 8px 12px;
            text-align: center;
            vertical-align: middle;
        }

        thead {
            background-color: #4A79D9;
            color: white;
            font-weight: bold;
        }

        .table-responsive {
            overflow-x: auto;
        }

        .card {
            width: 90%;
            margin: 20px auto;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        /* Custom badge colors */
        .badge-admin {
            background-color: #4e73df;
            color: white;
        }
        
        .badge-client {
            background-color: #36b9cc;
            color: white;
        }
        
        .badge-technician {
            background-color: #1c4f9c;
            color: white;
        }

        /* Status badges */
        .badge {
            font-size: 0.75rem;
            padding: 0.25em 0.6em;
        }

        /* Text truncation */
        .text-truncate {
            max-width: 150px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        /* Table header - blue style */
        #feedbacksTable thead tr {
            background: linear-gradient(180deg, #4e73df 0%, #224abe 100%);
            color: white;
        }

        #feedbacksTable thead th {
            font-size: 0.8rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            border: none;
            padding: 0.75rem;
            vertical-align: middle;
        }

        /* Hover effect for rows */
        #feedbacksTable tbody tr:hover {
            background-color: #f8f9fc;
        }

        /* Card styling */
        .card-shadow {
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
        }

        /* Delete button styling */
        .btn-delete {
            padding: 0.2rem 0.5rem;
            font-size: 0.75rem;
        }

        /* Dropdown styles */
        .dropdown {
            margin-top: 20px;
            position: relative;
            display: inline-block;
            align-self: center;
            align-items: center;
        }

        .dropdown-button {
            background-color: #f9f9f9;
            color: #4A79D9;
            font-size: 14px;
            font-weight: bold;
            border: none;
            border-style: solid;
            border-color: #4A79D9;
            border-width: 3%;
            cursor: pointer;
            width: 160px;
            padding: 4px;
            border-radius: 5px;
            transition: 0.3s;
        }
        
        .dropdown-button:hover {
            color: white;
            background-color: #4A79D9;
        }

        .dropdown-content {
            opacity: 0;
            transform: translateY(-10px);
            transition: opacity 0.3s ease, transform 0.3s ease;
            pointer-events: none;
            position: absolute;
            top: 100%;
            left: 0;
            background-color: white;
            border: none;
            border-style: solid;
            border-color: #ddd;
            width: 160px;
            box-shadow: 0px 8px 16px rgba(0,0,0,0.2);
            z-index: 500;
            border-radius: 5px;
        }
        
        .dropdown-content.show {
            opacity: 1;
            transform: translateY(0);
            pointer-events: auto;
        }

        .dropdown-content a {
            color: #555555;
            text-align: center;
            font-size: 12px;
            padding: 10px 15px;
            text-decoration: none;
            display: block;
        }

        .dropdown-content a:hover {
            background-color: #f1f1f1;
        }

        /* Search input */
        #searchInput {
            width: 90%;
            box-sizing: border-box;
            border: none;
            border-bottom: 1px solid #ddd;
            outline: none;
        }

        .alignSearchSVG {
            transform: translateY(40%);
            vertical-align: middle;
        }
        
        .alignSearchSVG:hover {
            cursor: pointer;
        }

        /* Image zoom overlay */
        #imageZoomOverlay {
            display: none;
            position: fixed;
            top: 0; 
            left: 0;
            width: 100%; 
            height: 100%;
            background-color: rgba(0, 0, 0, 0.8);
            z-index: 1050;
            justify-content: center;
            align-items: center;
        }
        
        #zoomedImage {
            max-width: 90%;
            max-height: 90%;
            height: auto;
            opacity: 0;
            transform: scale(0.8);
            transition: opacity 0.3s ease, transform 0.3s ease;
        }
    </style>
{% endblock %}

{% block content %}
    <div class="container-fluid">
        <h1 class="h3 mb-4 text-gray-800">Feedback List</h1>

        <div class="card shadow mb-4 card-shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">All Feedbacks</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table" id="feedbacksTable">
                        <thead>
                            <tr>
                                <th>Feedback Content</th>
                                <th>Rating</th>
                                <th>Date</th>
                                <th>User First Name</th>
                                <th>User Last Name</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for feedback in feedbacks %}
                                <tr>
                                    <td class="text-truncate" title="{{ feedback.content }}">{{ feedback.content }}</td>
                                    <td>{{ feedback.rating }}</td>
                                    <td>{{ feedback.date ? feedback.date|date('Y-m-d H:i:s') : 'N/A' }}</td>
                                    <td>{{ feedback.user.firstNameUser }}</td>
                                    <td>{{ feedback.user.lastNameUser }}</td>
                                    <td>
                                        <a href="{{ path('feedbackdelete', {'idFeedback': feedback.idFeedback}) }}" 
                                           class="btn btn-danger btn-delete" 
                                           onclick="return confirm('Are you sure you want to delete this feedback?')">
                                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" width="14" height="14" fill="currentColor">
                                                <path d="M135.2 17.7L128 32H32C14.3 32 0 46.3 0 64S14.3 96 32 96H416c17.7 0 32-14.3 32-32s-14.3-32-32-32H320l-7.2-14.3C307.4 6.8 296.3 0 284.2 0H163.8c-12.1 0-23.2 6.8-28.6 17.7zM416 128H32L53.2 467c1.6 25.3 22.6 45 47.9 45H346.9c25.3 0 46.3-19.7 47.9-45L416 128z"/>
                                            </svg>
                                        </a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="6" class="text-center text-muted py-3">No feedback available</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Overlay -->
    <div id="overlay"></div>
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#feedbacksTable').DataTable({
                "order": [[2, "desc"]], // Order by date by default
                "pageLength": 10,
                "lengthMenu": [[5, 10, 25, 50], [5, 10, 25, 50]],
                "language": {
                    "lengthMenu": "Show _MENU_ feedbacks per page",
                    "zeroRecords": "No feedback found",
                    "info": "Showing page _PAGE_ of _PAGES_",
                    "infoEmpty": "No feedback available",
                    "infoFiltered": "(filtered from _MAX_ total feedbacks)"
                },
                "columnDefs": [
                    { "width": "30%", "targets": 0 }, // Feedback Content column
                    { "width": "10%", "targets": 1 }, // Rating column
                    { "width": "15%", "targets": 2 }, // Date column
                    { "width": "15%", "targets": 3 }, // User First Name column
                    { "width": "15%", "targets": 4 }, // User Last Name column
                    { "width": "15%", "targets": 5, "orderable": false } // Action column
                ]
            });
        });
    </script>
{% endblock %}