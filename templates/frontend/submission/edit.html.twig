{% block title %}{{ 'Edit Submission' }}{% endblock %}

{% block stylesheets %}
<!-- SweetAlert2 CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

<style>
    .edit-container {
        max-width: 800px;
        margin: 4rem auto;
        padding: 2.5rem;
        background: linear-gradient(135deg, rgba(255,255,255,0.95) 0%, rgba(245,245,245,0.95) 100%);
        border-radius: 20px;
        box-shadow: 0 15px 35px rgba(100, 116, 139, 0.15),
                    inset 0 -2px 10px rgba(255, 255, 255, 0.5),
                    inset 0 2px 10px rgba(100, 116, 139, 0.1);
        position: relative;
        overflow: hidden;
        transform-style: preserve-3d;
    }

    .progress-bar {
        width: 100%;
        height: 4px;
        background: rgba(59, 130, 246, 0.1);
        margin-bottom: 2rem;
        border-radius: 2px;
        overflow: hidden;
    }

    .progress-fill {
        height: 100%;
        width: 0;
        background: linear-gradient(90deg, #3b82f6, #2563eb);
        transition: width 0.3s ease;
    }

    .form-title {
        color: #1e293b;
        font-size: 2rem;
        font-weight: 700;
        text-align: center;
        margin-bottom: 2.5rem;
        position: relative;
    }

    .form-row {
        margin-bottom: 1.75rem;
        position: relative;
        opacity: 0.7;
        transform: translateY(10px);
        transition: all 0.4s ease;
    }

    .form-row.active {
        opacity: 1;
        transform: translateY(0);
    }

    .form-row label {
        display: block;
        margin-bottom: 0.75rem;
        color: #475569;
        font-weight: 600;
        font-size: 0.95rem;
    }

    .form-row input,
    .form-row select,
    .form-row textarea {
        width: 100%;
        padding: 1rem 1.25rem;
        border: 2px solid #e2e8f0;
        border-radius: 12px;
        background-color: rgba(255, 255, 255, 0.9);
        transition: all 0.3s ease;
        font-size: 1rem;
        color: #1e293b;
        box-shadow: 0 4px 6px rgba(59, 130, 246, 0.05);
    }

    .form-row input:focus,
    .form-row select:focus,
    .form-row textarea:focus {
        border-color: #3b82f6;
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.2);
        outline: none;
    }

    .form-actions {
        display: flex;
        gap: 1rem;
        margin-top: 2.5rem;
        justify-content: center;
    }

    .btn {
        padding: 1rem 2rem;
        border: none;
        border-radius: 12px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        position: relative;
        overflow: hidden;
    }

    .btn-primary {
        background: linear-gradient(90deg, #3b82f6 0%, #2563eb 100%);
        color: white;
        box-shadow: 0 4px 15px rgba(59, 130, 246, 0.3);
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(59, 130, 246, 0.4);
    }

    .btn-secondary {
        background: linear-gradient(90deg, #64748b 0%, #475569 100%);
        color: white;
        text-decoration: none;
    }

    .btn-secondary:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(100, 116, 139, 0.3);
    }
</style>
{% endblock %}

{% block body %}
<div class="edit-container">
    <h1 class="form-title">{{ 'Edit Submission' }}</h1>

    <div class="progress-bar">
        <div class="progress-fill"></div>
    </div>

    {{ form_start(formSubmission, {'attr': {'id': 'editSubmissionForm', 'class': 'form-section'}}) }}
        <div class="form-row">
            {{ form_row(formSubmission.description, {
                'label': 'Description',
                'attr': {'class': 'form-field'}
            }) }}
        </div>

        <div class="form-row">
            {{ form_row(formSubmission.vinCode, {
                'label': 'VIN Code',
                'attr': {'class': 'form-field'}
            }) }}
        </div>

        <div class="form-row">
            {{ form_row(formSubmission.idUser, {
                'label': 'User',
                'attr': {'class': 'form-field'}
            }) }}
        </div>

        <div class="form-row">
            {{ form_row(formSubmission.preferredContactMethod, {
                'label': 'Contact Method',
                'attr': {'class': 'form-field'}
            }) }}
        </div>

        <div class="form-row">
            {{ form_row(formSubmission.preferredAppointmentDate, {
                'label': 'Appointment Date',
                'attr': {'class': 'form-field'}
            }) }}
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">{{ 'Save Changes' }}</button>
            <a href="{{ path('Front') }}" class="btn btn-secondary">{{ 'Cancel' }}</a>
        </div>
    {{ form_end(formSubmission) }}
</div>

<!-- SweetAlert2 JS -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
    const progressFill = document.querySelector('.progress-fill');
    const formInputs = document.querySelectorAll('input, select, textarea');
    const formRows = document.querySelectorAll('.form-row');
    const form = document.getElementById('editSubmissionForm');

    // Progress bar update function
    function updateProgress() {
        const filled = Array.from(formInputs).filter(input => input.value.trim() !== '').length;
        const progress = (filled / formInputs.length) * 100;
        progressFill.style.width = `${progress}%`;

        formRows.forEach(row => {
            const inputs = row.querySelectorAll('input, select, textarea');
            const hasValue = Array.from(inputs).some(input => input.value.trim() !== '');
            row.classList.toggle('active', hasValue);
        });
    }

    // Form submission handler
    form.addEventListener('submit', function(e) {
        e.preventDefault();
        
        Swal.fire({
            title: 'Confirm Changes',
            text: "Are you sure you want to update this submission?",
            icon: 'question',
            showCancelButton: true,
            confirmButtonColor: '#3b82f6',
            cancelButtonColor: '#64748b',
            confirmButtonText: 'Yes, save changes!',
            cancelButtonText: 'Cancel'
        }).then((result) => {
            if (result.isConfirmed) {
                form.submit();
            }
        });
    });

    // Initialize progress bar
    formInputs.forEach(input => {
        input.addEventListener('input', updateProgress);
        if (input.value.trim() !== '') input.dispatchEvent(new Event('input'));
    });
});
</script>
{% endblock %}