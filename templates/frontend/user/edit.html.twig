        .ev-profile-pic-container {
            position: relative;
            width: 200px;
            height: 200px;
            margin-bottom: 30px;
        }
        
        .ev-profile-pic {
            width: 100%;
            height: 100%;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid var(--electric-blue);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
        }
        
        .ev-profile-upload {
            position: absolute;
            bottom: 10px;
            right: 10px;
            background: var(--primary-blue);
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
