{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Enhanced form interactions
            const formGroups = document.querySelectorAll('.ev-form-group');
            
            formGroups.forEach(group => {
                const input = group.querySelector('.ev-form-control');
                const label = group.querySelector('label');
                
                if (input && label) {
                    // Add focus class to parent group
                    input.addEventListener('focus', function() {
                        group.classList.add('focused');
                    });
                    
                    input.addEventListener('blur', function() {
                        if (!this.value) {
                            group.classList.remove('focused');
                        }
                    });
                    
                    // Initialize focused state if input has value
                    if (input.value) {
                        group.classList.add('focused');
                    }
                }
            });
            
            // Animate the button on load
            const registerBtn = document.querySelector('.ev-btn');
            if (registerBtn) {
                setTimeout(() => {
                    registerBtn.style.opacity = '1';
                    registerBtn.style.transform = 'translateY(0)';
                }, 300);
            }
            
            // Enhanced select dropdown
            const paymentSelect = document.querySelector('.ev-form-control[data-widget="select"]');
            if (paymentSelect) {
                paymentSelect.addEventListener('focus', function() {
                    this.parentElement.classList.add('focused');
                });
                
                paymentSelect.addEventListener('blur', function() {
                    this.parentElement.classList.remove('focused');
                });
            }
            
            // Address field auto-resize
            const addressField = document.querySelector('.ev-address');
            if (addressField) {
                addressField.addEventListener('input', function() {
                    this.style.height = 'auto';
                    this.style.height = (this.scrollHeight) + 'px';
                });
                
                // Initialize with correct height
                setTimeout(() => {
                    addressField.style.height = (addressField.scrollHeight) + 'px';
                }, 100);
            }
        });
    </script>
{% endblock %}