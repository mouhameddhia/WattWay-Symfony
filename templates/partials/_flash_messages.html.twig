{% if app.flashes is defined %}
    {# Debug information - uncomment to use #}
    <div style="display:none;" class="flash-debug">
        Flash messages found: {{ app.flashes|length > 0 ? 'Yes' : 'No' }}
        Types: {{ app.flashes|keys|join(', ') }}
    </div>
    
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            {% set alertClass = label %}
            {% if label == 'error' %}
                {% set alertClass = 'danger' %}
            {% endif %}
            
            <div class="alert alert-{{ alertClass }} alert-dismissible fade show mb-4" role="alert" style="font-size: 1.1em; font-weight: 500;">
                <i class="fas fa-{% if label == 'success' %}check-circle{% elseif label == 'error' or label == 'danger' %}exclamation-circle{% else %}info-circle{% endif %} mr-2"></i>
                {{ message }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {% endfor %}
    {% endfor %}
{% endif %} 