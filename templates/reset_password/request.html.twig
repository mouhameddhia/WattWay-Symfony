{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Electrolize&family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-blue: #132EC2;
            --dark-blue: #0A1F44;
            --light-blue: #3A4FE4;
            --white: #FFFFFF;
            --electric-blue: #00C8FF;
        }
        
        body {
            background: linear-gradient(135deg, var(--dark-blue) 0%, #001a33 100%);
            font-family: 'Montserrat', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            color: var(--white);
            margin: 0;
            padding: 20px;
        }
        
        .reset-card {
            width: 100%;
            max-width: 500px;
            background: rgba(10, 31, 68, 0.85);
            backdrop-filter: blur(12px);
            border-radius: 20px;
            padding: 40px;
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.3);
            border: 1px solid rgba(255, 255, 255, 0.15);
        }
        
        .reset-header {
            text-align: center;
            margin-bottom: 30px;
        }
        
        .reset-header h1 {
            font-family: 'Electrolize', sans-serif;
            color: var(--electric-blue);
            margin-bottom: 15px;
            font-size: 28px;
            text-shadow: 0 2px 10px rgba(0, 200, 255, 0.3);
        }
        
        .reset-header h1::after {
            content: '';
            display: block;
            width: 60px;
            height: 3px;
            background: var(--electric-blue);
            margin: 10px auto 0;
            border-radius: 3px;
            box-shadow: 0 0 15px var(--electric-blue);
        }
        
        .form-group {
            margin-bottom: 25px;
        }
        
        .form-group label {
            display: block;
            margin-bottom: 10px;
            color: rgba(255, 255, 255, 0.9);
            font-weight: 500;
        }
        
        .form-control {
            width: 100%;
            padding: 14px 18px;
            background: rgba(255, 255, 255, 0.08);
            border: 1px solid rgba(255, 255, 255, 0.15);
            border-radius: 8px;
            color: var(--white);
            font-family: 'Montserrat', sans-serif;
            font-size: 15px;
        }
        
        .form-control:focus {
            outline: none;
            border-color: var(--electric-blue);
            background: rgba(255, 255, 255, 0.12);
            box-shadow: 0 0 0 3px rgba(0, 200, 255, 0.2);
        }
        
        .btn-reset {
            width: 100%;
            padding: 16px;
            background: linear-gradient(135deg, var(--primary-blue) 0%, var(--light-blue) 100%);
            border: none;
            border-radius: 8px;
            color: var(--white);
            font-family: 'Electrolize', sans-serif;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            margin-top: 20px;
            box-shadow: 0 8px 25px rgba(19, 46, 194, 0.4);
            transition: all 0.3s ease;
        }
        
        .btn-reset:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 30px rgba(19, 46, 194, 0.6);
        }
        
        .reset-footer {
            text-align: center;
            margin-top: 25px;
            color: rgba(255, 255, 255, 0.7);
        }
        
        .reset-footer a {
            color: var(--electric-blue);
            text-decoration: none;
            font-weight: 600;
        }
        
        .alert-danger {
            color: #FF6B35;
            background: rgba(255, 107, 53, 0.1);
            border-left: 3px solid #FF6B35;
            padding: 15px;
            border-radius: 0 6px 6px 0;
            margin-bottom: 25px;
            display: flex;
            align-items: center;
        }
        
        .alert-danger:before {
            content: "âš ";
            margin-right: 10px;
            font-size: 1.2rem;
        }
    </style>
{% endblock %}

{% block body %}
<div class="reset-card">
    <div class="reset-header">
        <h1>Reset Password</h1>
    </div>

    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert-danger">{{ flash_error }}</div>
    {% endfor %}

    {{ form_start(requestForm) }}
        <div class="form-group">
            {{ form_label(requestForm.emailUser) }}
            {{ form_widget(requestForm.emailUser, {'attr': {'class': 'form-control', 'placeholder': 'Enter your email'}}) }}
            <small style="color: rgba(255,255,255,0.7); display: block; margin-top: 8px;">
                Enter your email to receive a reset link
            </small>
        </div>

        <button type="submit" class="btn-reset">
            <i class="fas fa-paper-plane"></i> Send Reset Link
        </button>
    {{ form_end(requestForm) }}

    <div class="reset-footer">
        Remember your password? <a href="{{ path('app_login') }}">Sign in</a>
    </div>
</div>
{% endblock %}