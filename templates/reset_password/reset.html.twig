{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Electrolize&family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-blue: #132EC2;
            --dark-blue: #0A1F44;
            --light-blue: #3A4FE4;
            --white: #FFFFFF;
            --electric-blue: #00C8FF;
        }
        
        body {
            background: linear-gradient(135deg, var(--dark-blue) 0%, #001a33 100%);
            font-family: 'Montserrat', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            color: var(--white);
            margin: 0;
            padding: 20px;
        }
        
        .reset-card {
            width: 100%;
            max-width: 500px;
            background: rgba(10, 31, 68, 0.85);
            backdrop-filter: blur(12px);
            border-radius: 20px;
            padding: 40px;
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.3);
            border: 1px solid rgba(255, 255, 255, 0.15);
        }
        
        .reset-header {
            text-align: center;
            margin-bottom: 30px;
        }
        
        .reset-header h1 {
            font-family: 'Electrolize', sans-serif;
            color: var(--electric-blue);
            margin-bottom: 15px;
            font-size: 28px;
            text-shadow: 0 2px 10px rgba(0, 200, 255, 0.3);
        }
        
        .reset-header h1::after {
            content: '';
            display: block;
            width: 60px;
            height: 3px;
            background: var(--electric-blue);
            margin: 10px auto 0;
            border-radius: 3px;
            box-shadow: 0 0 15px var(--electric-blue);
        }
        
        .form-group {
            margin-bottom: 25px;
        }
        
        .form-group label {
            display: block;
            margin-bottom: 10px;
            color: rgba(255, 255, 255, 0.9);
            font-weight: 500;
        }
        
        .form-control {
            width: 100%;
            padding: 14px 18px;
            background: rgba(255, 255, 255, 0.08);
            border: 1px solid rgba(255, 255, 255, 0.15);
            border-radius: 8px;
            color: var(--white);
            font-family: 'Montserrat', sans-serif;
            font-size: 15px;
        }
        
        .form-control:focus {
            outline: none;
            border-color: var(--electric-blue);
            background: rgba(255, 255, 255, 0.12);
            box-shadow: 0 0 0 3px rgba(0, 200, 255, 0.2);
        }
        
        .btn-reset {
            width: 100%;
            padding: 16px;
            background: linear-gradient(135deg, var(--primary-blue) 0%, var(--light-blue) 100%);
            border: none;
            border-radius: 8px;
            color: var(--white);
            font-family: 'Electrolize', sans-serif;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            margin-top: 20px;
            box-shadow: 0 8px 25px rgba(19, 46, 194, 0.4);
            transition: all 0.3s ease;
        }
        
        .btn-reset:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 30px rgba(19, 46, 194, 0.6);
        }
    </style>
{% endblock %}

{% block body %}
<div class="reset-card">
    <div class="reset-header">
        <h1>Create New Password</h1>
    </div>

   {{ form_start(resetForm, {'attr': {'class': 'reset-form'}}) }}
        <div class="form-group">
            {{ form_label(resetForm.plainPassword.first) }}
            {{ form_widget(resetForm.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'Enter new password'}}) }}
        </div>
        
        <div class="form-group">
            {{ form_label(resetForm.plainPassword.second) }}
            {{ form_widget(resetForm.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'Repeat new password'}}) }}
        </div>

        <button type="submit" class="btn-reset">
            <i class="fas fa-key"></i> Reset Password
        </button>
    {{ form_end(resetForm) }}
</div>
{% endblock %}